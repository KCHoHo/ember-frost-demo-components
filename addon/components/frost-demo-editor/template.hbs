<div class="ribbon">
  <div class="tabs">
    <div class="tab code {{codeClass}}">
      Code
    </div>
    <div class="tab doc {{docClass}}">
      Documentation
    </div>
  </div>
</div>
{{#if showCode}}
  {{frost-file-explorer fileTree=fileTree isCollapsed=collapseExplorer onFileClick='onFileClick'}}
  <div class='tab-gutter'></div>
  <div class="demo-code">
    {{ivy-codemirror value=source lineNumbers=true mode=mode theme=codeTheme}}
  </div>
{{else}}
  <div class="demo-doc">
    {{markdown-to-html markdown=documentation ghCodeBlocks=true tables=true}}
  </div>
{{/if}}
